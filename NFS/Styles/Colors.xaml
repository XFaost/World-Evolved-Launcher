<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:NFS">

    <Color              x:Key="BackgroungColor">#000d1a</Color>
    <SolidColorBrush    x:Key="BackgroungColorBrush" Color="{StaticResource BackgroungColor}" />

    <Color              x:Key="BackgroungColorLight">#001a33</Color>
    <SolidColorBrush    x:Key="BackgroungColorLightBrush" Color="{StaticResource BackgroungColorLight}" />

</ResourceDictionary>